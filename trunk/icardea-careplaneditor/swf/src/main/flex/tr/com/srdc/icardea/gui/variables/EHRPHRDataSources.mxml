<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns="fr.kapit.skin.component.*" xmlns:mx="http://www.adobe.com/2006/mxml"
         width="100%" height="100%" xmlns:source = "tr.com.srdc.icardea.gui.variables.*" >
    
    <mx:Script>
        <![CDATA[
 
 	        [Bindable]
            public var selectedNode:XML;
 
             // Event handler for the Tree control change event.
            public function treeChanged(event:Event):void 
            {
            	selectedNode=Tree(event.target).selectedItem as XML;  
            	definedValues.initArr();          	
            }
            
        ]]>
    </mx:Script>
    <mx:XMLList id="treeData">
    	
	<node label="Health Records\n">
		<node label="Problem\n"/>
		<node label="Medication\n"/>
		<node label="Imaging Result\n"/>
		<node label="Procedure\n"/>
		<node label="Demograpics\n"/>
	</node>

    </mx:XMLList>
    	 <mx:HBox creationPolicy="all" width="100%" height="100%" color="0x323232">
            <mx:Tree id="myTree" 
            	width="100%" height="100%" 
            	labelField="@label" 
            	showRoot="false" 
            	dataProvider="{treeData}" 
            	change="treeChanged(event)"
       		/>
       		<source:PredefinedValuesList id="definedValues" sparent="{this}" width="100%" height="100%"/>
       	 </mx:HBox>
 </mx:VBox>


